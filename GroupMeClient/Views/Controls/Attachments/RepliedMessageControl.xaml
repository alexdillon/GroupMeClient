<UserControl x:Class="GroupMeClient.WpfUI.Views.Controls.Attachments.RepliedMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
             Padding="0,0,0,0">
    
    <Border BorderBrush="LightGray" BorderThickness="1,1,1,1" CornerRadius="3">
        <UserControl Content="{Binding Message}" 
                     HorizontalAlignment="Left"
                     MinWidth="300"
                     Background="{DynamicResource TweetBackgroundBrush}"/>
    </Border>
</UserControl>