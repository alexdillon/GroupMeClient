<UserControl x:Class="GroupMeClient.AvaloniaUI.Views.Controls.Attachments.ImageLinkAttachmentControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:GroupMeClient.AvaloniaUI.Converters"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:ia="clr-namespace:Avalonia.Xaml.Interactions.Core;assembly=Avalonia.Xaml.Interactions"
             xmlns:microcube="clr-namespace:MicroCubeAvalonia.Controls;assembly=MicroCubeAvalonia"
             xmlns:vm="using:GroupMeClient.Core.ViewModels.Controls.Attachments"
             x:DataType="vm:ImageLinkAttachmentControlViewModel"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
             Background="{DynamicResource ThemeBackgroundBrush}">
  
  <Border BorderThickness="8" BorderBrush="{DynamicResource ThemeBackgroundBrush}">
    <Grid>
    
      <!--gif:AnimationBehavior.SourceStream="{Binding ImageAttachmentStream}"-->
      <Image MaxWidth="500"
             MaxHeight="600"
             StretchDirection="DownOnly"
             Stretch="Uniform"
             HorizontalAlignment="Left"
             UseLayoutRounding="True"
             Source="{Binding ImageAttachmentStream, Converter={StaticResource imageSourceConverter}}">

        <i:Interaction.Behaviors>
          <ia:EventTriggerBehavior EventName="PointerPressed">
            <ia:InvokeCommandAction Command="{Binding Clicked}"/>
          </ia:EventTriggerBehavior>
        </i:Interaction.Behaviors>
      </Image>

      <microcube:ProgressRing IsVisible="{Binding IsLoading}"
                              Width="60" Height="60"
                              HorizontalAlignment="Center"
                              Background="Transparent"
                              Foreground="{DynamicResource LoadingSpinnerDarkBrush}"/>
    </Grid>
  </Border>
</UserControl>
