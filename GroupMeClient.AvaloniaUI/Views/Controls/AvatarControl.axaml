<UserControl x:Class="GroupMeClient.AvaloniaUI.Views.Controls.AvatarControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GroupMeClient.AvaloniaUI.Converters"
             xmlns:vm="using:GroupMeClient.Core.ViewModels.Controls"
             x:DataType="vm:AvatarControlViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">

  <Border Classes.round="{Binding IsRound}"
          Classes.square="{Binding !IsRound}">

    <Border.Background>
      <ImageBrush Source="{Binding AvatarImage, Converter={StaticResource imageSourceConverter}}" />
    </Border.Background>

    <Border.Styles>
      <Style Selector="Border.round">
        <!--Binding to the actual width with {Binding $self.Bounds.Width} doesn't seem to update correctly-->
        <Setter Property="CornerRadius" Value="1000" />
      </Style>
      <Style Selector="Border.square">
        <Setter Property="CornerRadius" Value="0" />
      </Style>
    </Border.Styles>
  </Border>
</UserControl>