<UserControl x:Class="GroupMeClient.AvaloniaUI.Views.Controls.AvatarControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:GroupMeClient.AvaloniaUI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">

    <Grid>
      <Grid.Resources>
        <converters:InverseBoolConverter x:Key="inverseBoolConverter" />
        <converters:GenericImageSourceToImageSource x:Key="imageSourceConverter" />
      </Grid.Resources>

      <Ellipse IsVisible="{Binding IsRounded}">
        <Ellipse.Fill>
          <!--TODO 11-->
          <!--RenderOptions.BitmapInterpolationMode="MediumQuality"-->
          <ImageBrush Source="{Binding AvatarRound, Converter={StaticResource imageSourceConverter}}" 
                       />
        </Ellipse.Fill>
      </Ellipse>

      <Rectangle IsVisible="{Binding IsRounded, Converter={StaticResource inverseBoolConverter}}">
        <Rectangle.Fill>
          <!--TODO 11-->
          <!--RenderOptions.BitmapInterpolationMode="MediumQuality"-->
          <ImageBrush Source="{Binding AvatarSquare, Converter={StaticResource imageSourceConverter}}"
                       />
        </Rectangle.Fill>
      </Rectangle>
    </Grid>
</UserControl>