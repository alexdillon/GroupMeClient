<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="GMDC.Accessibility.ChatFocus">
        <Border HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="{DynamicResource SelectionBorderBrush}"
                BorderBrush="{DynamicResource SelectionBorderBrush}"
                CornerRadius="3"
                Width="5"
                Height="50"
                Margin="5,-9,0,0"
                Visibility="{Binding IsHighlighted, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </ControlTemplate>
</ResourceDictionary>